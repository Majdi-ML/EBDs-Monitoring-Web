{% extends 'base.html.twig' %}

{% block title %}Process index{% endblock %}

{% block body %}
    <h1>Process index</h1>

    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Id</th>
                <th>Ref</th>
                <th>Etat</th>
                <th>RefComposant</th>
                <th>Process</th>
                <th>Criticite</th>
                <th>MessageAlarme</th>
                <th>IntervalleDePolling</th>
                <th>Objet</th>
                <th>NomTemplate</th>
                <th>MonitoredBy</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for process in processes %}
            <tr>
                <td>{{ process.id }}</td>
                <td>{{ process.ref }}</td>
                <td>{{ process.etat }}</td>
                <td>{{ process.refComposant }}</td>
                <td>{{ process.process }}</td>
                <td>{{ process.criticite }}</td>
                <td>{{ process.messageAlarme }}</td>
                <td>{{ process.intervalleDePolling }}</td>
                <td>{{ process.objet }}</td>
                <td>{{ process.nomTemplate }}</td>
                <td>{{ process.monitoredBy }}</td>
                <td>
                    <a href="{{ path('app_process_show', {'id': process.id}) }}">show</a>
                    <a href="{{ path('app_process_edit', {'id': process.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="12">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_process_new') }}">Create new</a>
{% endblock %}
