              <div class="card mb-3">

                <div class="card-body">

                  <div class="pt-4 pb-2">
                    <h5 class="card-title text-center pb-0 fs-4">Create an Account</h5>
                    <p class="text-center small">Enter your personal details to create an account</p>
                  </div>

                  {{ form_errors(registrationForm) }}
                  {{ form_start(registrationForm) }}
                  <form class="row g-3 needs-validation" novalidate>

                    <!-- Username Field -->
                    <div class="col-12">
                      {{ form_row(registrationForm.username, {'label': 'Username', 'attr': {'placeholder': 'Enter your username', 'class': 'form-control'}}) }}
                      <div class="invalid-feedback">Please enter a valid username!</div>
                    </div>

                    <!-- Email Field -->
                    <div class="col-12">
                      {{ form_row(registrationForm.email, {'label': 'Email', 'attr': {'placeholder': 'Enter your email', 'class': 'form-control'}}) }}
                      <div class="invalid-feedback">Please enter a valid Email address!</div>
                    </div>

                    <!-- Password Field -->
                    <div class="col-12">
                      {{ form_row(registrationForm.plainPassword, {'label': 'Password', 'attr': {'placeholder': 'Enter your password', 'class': 'form-control', 'id': 'yourPassword'}}) }}
                      <div class="invalid-feedback">Please enter your password!</div>
                    </div>

                    <!-- Roles Field -->
                    <div class="col-12">
                      {{ form_row(registrationForm.roles, {'label': 'Roles', 'attr': {'class': 'form-control'}}) }}
                    </div>

                    <!-- Agree Terms Checkbox -->
                    <div class="col-12">
                      <div class="form-check">
                        {{ form_row(registrationForm.agreeTerms, {'attr': {'class': 'form-check-input'}}) }}
                        <label class="form-check-label" for="acceptTerms">I agree and accept the <a href="#">terms and conditions</a></label>
                        <div class="invalid-feedback">You must agree before submitting.</div>
                      </div>
                    </div>

                    <!-- Submit Button -->
                    <div class="col-12">
                      {{ form_row(registrationForm.save) }}
                    </div>

                    <!-- Login Link -->
                    <div class="col-12">
                      <p class="small mb-0">Already have an account? <a href="{{ path('app_login') }}">Log in</a></p>
                    </div>

                    {{ form_end(registrationForm) }}

